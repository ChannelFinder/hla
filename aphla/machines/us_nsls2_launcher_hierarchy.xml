<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hierarchy [
    <!ENTITY appClock "
        <item>
            <dispName>Clock</dispName>
            <desc></desc>
            <icon>gui_app</icon>
            <itemType>exe</itemType>
            <command>xclock</command>
            <cwd></cwd>
            <sourceFilepath></sourceFilepath>
            <editor></editor>
            <helpHeader></helpHeader>
        </item>
    ">

    <!ENTITY appOrbit "
        <item>
            <dispName>Orbit</dispName>
            <desc></desc>
            <icon>gui_app</icon>
            <itemType>exe</itemType>
            <command>aporbit</command>
            <cwd></cwd>
            <sourceFilepath></sourceFilepath>
            <editor></editor>
            <helpHeader></helpHeader>
        </item>
    ">

    <!ENTITY appBBA "
        <item>
            <dispName>Beam Based Alignment</dispName>
            <desc></desc>
            <icon>gui_app</icon>
            <itemType>exe</itemType>
            <command>apbba</command>
            <cwd></cwd>
            <sourceFilepath></sourceFilepath>
            <editor></editor>
            <helpHeader></helpHeader>
        </item>
    ">

]>
<hierarchy version="1.0">

    <alias>
        <key>aphla_lib_path</key>
        <value>/epics/op/apps/aphla/lib/python/aphla-0.8.7-py2.7.egg</value>
    </alias>
    <alias>
        <key>terminal</key>
        <value>gnome-terminal --disable-factory</value>
    </alias>
    <alias>
        <key>css</key>
        <value>run-css -r 3.2.13a</value>
    </alias>

    <item>
        <dispName>root</dispName>
        <desc></desc>
        <icon>page</icon>
        <itemType>page</itemType>

        <item>
            <dispName>Python Scripts</dispName>
            <desc></desc>
            <icon>page</icon>
            <itemType>page</itemType>
        </item>  <!-- Python Scripts -->

        <item>
            <dispName>MATLAB Scripts</dispName>
            <desc></desc>
            <icon>page</icon>
            <itemType>page</itemType>
        </item>  <!-- MATLAB Scripts -->

        <item>
            <dispName>Examples</dispName>
            <desc></desc>
            <icon>page</icon>
            <itemType>page</itemType>
            &appClock;
            <item>
                <dispName>Launcher</dispName>
                <desc></desc>
                <icon>gui_app</icon>
                <itemType>exe</itemType>
                <command>aplauncher</command>
                <cwd></cwd>
                <sourceFilepath>%aphla_lib_path/aphla/gui/aplauncher.py</sourceFilepath>
                <editor>gedit</editor>
                <helpHeader>python</helpHeader>
            </item>
            <item>
                <dispName>Tinker (PreTune)</dispName>
                <desc></desc>
                <icon>gui_app</icon>
                <itemType>exe</itemType>
                <command>aptinker</command>
                <cwd></cwd>
                <sourceFilepath>%aphla_lib_path/aphla/gui/aplattuner.py</sourceFilepath>
                <editor>gedit</editor>
                <helpHeader>python</helpHeader>
            </item>
        </item> <!-- Examples -->

    </item>  <!-- root -->
</hierarchy>
